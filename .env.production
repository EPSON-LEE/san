# 生产环境配置
NODE_ENV=production

# 服务端口配置
BACKEND_PORT=4000
FRONTEND_PORT=80

# 数据库配置 (生产环境使用安全配置)
MONGODB_VERSION=6.0
MONGODB_PORT=27017
MONGODB_USERNAME=prod_admin
MONGODB_PASSWORD=your-secure-production-password
MONGODB_DATABASE=decode
DATABASE_URL=mongodb://mongodb:27017/decode

# API 配置
API_PREFIX=api
REACT_APP_API_URL=https://your-domain.com

# 日志配置 (生产环境使用简洁日志)
LOG_LEVEL=info

# JWT 配置 (生产环境使用强密钥)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production

# 其他配置
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000