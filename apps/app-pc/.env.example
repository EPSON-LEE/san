# 数据库连接
DATABASE_URL="postgresql://username:password@localhost:5432/ai_navigation?schema=public"
# 或者使用 MySQL
# DATABASE_URL="mysql://username:password@localhost:3306/ai_navigation"
# 或者使用 SQLite (开发环境)
# DATABASE_URL="file:./dev.db"

# JWT 密钥（如果需要认证）
JWT_SECRET="your-super-secret-jwt-key"

# Redis 连接（如果需要缓存）
REDIS_URL="redis://localhost:6379"

# 外部API密钥
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="..."

# 应用配置
APP_ENV="development"
APP_PORT=3001
APP_HOST="localhost"

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,svg,webp"

# 邮件服务配置（如果需要）
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"